<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <hader>
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="#">ながのCAKE</a>
          </div>
            <ul class="nav navbar-nav navbar-right">
              <% if admin_signed_in? %>
                 <li><%= link_to "商品一覧", admins_items_path %></li>
                <li><%= link_to "会員一覧", admins_customers_path %></li>
                <li><%=link_to '注文履歴一覧', admins_orders_path %></li>
                <li><%=link_to 'ジャンル管理', admins_genres_path %></li>
                <li class="">
                <%=link_to admin_registration_path, method: "delete" do %>ログアウト</li>
                <% end %>

              <% elsif  customer_signed_in? %>
              <li><%= link_to "マイページ", root_path %></li>
                <li><%= link_to "商品一覧", customers_items_path %></li>
                <li><%=link_to '注文履歴一覧', customers_orders_path %></li>
                <li class="">
                  <%=link_to destroy_customer_session_path, method: "delete" do %>ログアウト</li>
              <%end%>
              <% else %>
                <li><%= link_to "Top", root_path %></li>
                <li><%= link_to "About", customers_homes_about_path %></li></li>
                <li><%= link_to "新規登録", new_customer_registration_path %></li>
                <li><%= link_to "ログイン", new_customer_session_path %></li>
             <% end %>
            </ul>
        </div>
      </nav>
    </hader>
      <%= yield %>
  </body>
</html>