<div class="container">
  <div class="row">
  	<h1>商品　新規登録</h1>
	<div class="col-xs-8 col-xs-offset-4">
	<%= form_for(@item, url:admins_items_path) do |f| %>
		<tbody>
			<tr>
			  <td>
			  	<%= attachment_image_tag @item, :image, :fill, 200,200, format: "jpg" %>
                <%= f.attachment_field :image %>
			  </td>

			  <td>
			  　　<h4>商品名</h4>
			  　　<%= f.text_field :name, size: "30x10" %>
			  </td>
			  <td>
			  　　<h4>商品説明</h4>
			  　　<%= f.text_area :description, size: "32x6" %>
			  </td>
			  <td>
			  　　<h4>ジャンル</h4>
			  　　<%= f.collection_select :genre_id, @genre, :id ,:genre_name, :prompt => "--選択してください--" %>
			  </td>
			  <td>
			  <h4>税抜価格</h4>
			  <%= f.text_field :price, size: "30x10" %>
			  </td>
			  <td>
			  <h4>販売ステータス</h4>
        <%= f.select :sales_status, [["販売中","販売中"], ["売切れ", "売切れ"]], :include_blank =>"--選択してください--" %>
			  </td><br>
			  <%= f.submit "登録", class:"touroku-action btn btn-info" %>
			</tr>
		</tbody>
	<% end %>
    </div>
  </div>
</div>