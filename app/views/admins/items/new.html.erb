<h1>商品　新規登録画面</h1>

<div class="container">
	<div class="row">
		<div class="col-xs-2"></div>
		<div class="col-xs-10">


		  <%= form_for(@item, url:admins_items_path(@item.id)) do |f| %>

		  
		  <%= f.attachment_field :image %>
		  

		  <h4>商品名</h4>
		  <%= f.text_field :name, size: "30x10" %>

		  <h4>商品説明</h4>
		  <%= f.text_area :description, size: "32x6" %>

		  <h4>ジャンル</h4>
		  <%= f.select :jenre_id, "--選択してください--" %>

		  <h4>税抜価格</h4>
		  <%= f.text_field :price, size: "30x10" %>

		  <h4>販売<br>ステータス</h4>
		  <%= f.select :sales_atatus, "--選択してください--" %>

		  <br><%= f.submit "登録", class:"btn btn-info" %>

		 <% end %>
		</div>
	</div>
</div>