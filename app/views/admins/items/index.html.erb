<div class="container">
  <h1>商品一覧</h1>

  <table class="table">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税込価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
    <% if @items.present? %>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admins_item_path(item.id) %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.genre_name %></td>
          <% if item.sales_atatus %>
            <td>販売中</td>
          <% else %>
            <td>売切れ</td>
          <%end%>
      </tr>
     <% end %>
     <% end %>
    </tbody>
  </table>
</div>


