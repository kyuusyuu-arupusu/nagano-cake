<div class="container">
 <div class="row">
  <h1>商品一覧</h1>
  <div class="col-xs-offset-11">
  <%= link_to "商品追加+", new_admins_item_path, class: "btn btn-info" %> 
</div>
  <table class="table">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税込価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
    <% if @items.present? %>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admins_item_path(item.id) %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.genre_name %></td>
        <td><%= item.sales_atatus %></td>
      </tr>
    <% end %>
    <% end %>
    </tbody>
  </table>
</div>


