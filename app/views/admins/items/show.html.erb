
<div class="container">
	<div class="row">
		<div class="col-xs-4">
		<h2>商品詳細</h2>
			<%= attachment_image_tag @item, :image, :fill, 200,200, format: "jpeg" %>
		</div>
		<div class="col-xs-8">
			<div class="row">
			  <div class="col-xs-3">
			    <h4>商品名</h4>
			  </div>
			    <div class="col-xs-5">
			      <span><h4><%= @item.name %></h4></span>
			    </div>
		    </div>
		    <div class="row">
			  <div class="col-xs-3">
			    <h4>商品説明</h4>
			  </div>
			  <div class="col-xs-7">
			    <span><h4><%= @item.description %></h4></span>
			  </div>
			</div>
			<div class="row">
			  <div class="col-xs-3">
		        <h4>ジャンル</h4>
		      </div>
		      <div class="col-xs-5">
			    <span><h4><%= @item.genre.genre_name %></h4></span>
			  </div>
			</div>
			<div class="row">
		      <div class="col-xs-3">
				<h4>税込価格</h4>
			  </div>
			  <div class="col-xs-5">
			    <span><h4><%= @item.price %></h4></span>
			  </div>
		    </div>
		    <div class="row">
		      <div class="col-xs-3">
			    <h4>販売ステータス</h4>
			  </div>
			  <div class="col-xs-5">
			    <span><h4><%= @item.sales_atatus %></h4></span>
              </div>
              <div class="col-xs-3">
			    <%= link_to "編集する", edit_admins_item_path(@item.id), class:"btn btn-info" %>
			  </div>
		    </div>
		</div>
