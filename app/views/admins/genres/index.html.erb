<div class="container">
  <div class="row">
    <div class="col-xs-10">
      <h2>ジャンル追加・一覧</h2>

      <%= form_with(model:@genre, url:admins_genres_path, local: true) do |f| %>
      <div class="col-xs-8">
      <strong>ジャンル</strong>
      
        <%= f.text_field :genre_name %>
        <%= f.radio_button :display_status, :true %>
        <%= f.label :display_status, "有効", {value: :true} %>
        <%= f.radio_button :display_status, :false %>
        <%= f.label :display_status, "無効", {value: :false} %>
      </div>
        <div class="col-xs-2">
        <%= f.submit "追加", class:"btn btn-info" %>
      </div>
      <% end %><br>

        <table class="table">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th>状態</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          <% if @genres.present? %>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.genre_name %></td>
              <% if genre.display_status %>
              <td>有効</td>
              <% else %>
              <td>無効</td>
              <% end %>
              <td><%= link_to "編集する", edit_admins_genre_path(genre), class:"btn btn-Primary" %></td>
            </tr>
           <% end %>
           <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>