<div class="container">
  <div class="row">
  	<div class="col-xs-7">
  	  <p>注文情報</p>
  	  <table class="table table-bordered">
	    <tbody>
	  	  <tr class="active">
	  	    <td>注文日</td>
	  	    <td><%= @order.created_at.to_s(:datetime_jp) %></td>

	  	  </tr>
	  	  <tr>
	  	    <td class="active">配送先</td>
	  	    <td>
            <%= @order.post_code %>
            <%= @order.address %>
            <%= @order.name %>
            </td>
	  	  </tr>
	  	  <tr>
	  	    <td class="active">支払い方法</td>
	  	    <td><%= @order.payment_method %></td>
	  	  </tr>
	  	  <tr>
	  	    <td class="active">ステータス</td>
	  	    <td><%= @order.order_status %></td>
	  	  </tr>
	  	</tbody>
  	  </table>
  	</div>
	<div class="col-xs-3">
	  <p>請求情報</p>
  	  <table class="table table-bordered">
        <tbody>
  	      <tr>
  	        <td class="active">商品合計</td>
  	        <td><%= @order.total_price %>円</td>
  	      </tr>
  	      <tr>
  	        <td class="active">配送料</td>
  	        <td><%= @order.postage %>円</td>
  	      </tr>
  	      <tr>
  	        <td class="active">ご請求額</td>
  	        <td><%= @order.total_price + @order.postage %>円</td>
  	      </tr>
  	    </tbody>
  	  </table>
	</div>
  </div>
  <div class="row">
  	<div class="col-xs-8">
      <p>注文内容</p>
      <table class="table table-bordered">
        <thead>
        	<tr>
        	  <th class="active">商品</th>
        	  <th class="active">単価（税込）</th>
        	  <th class="active">個数</th>
        	  <th class="active">小計</th>
        	</tr>
        </thead>
        <tbody>
          <% @order_detail.each do |order_detail| %>
         <tr>
         	<td><%= order_detail.item.name %></td>
         	<td><%= order_detail.price %>円</td>
         	<td><%= order_detail.quantity %>個</td>
          <td><%= order_detail.price * order_detail.quantity %>円</td>
         </tr>
         <% end %>
        </tbody>
      </table>
