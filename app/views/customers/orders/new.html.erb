
<div class="conteiner">
  <div class="row">
  	<div class="col-xs-1"></div>
    <div class="col-xs-10">
	  <h2>購入情報入力</h2>
	  <%= form_with(model:@order, url:customers_orders_check_path, local: true) do |f| %>
	   <strond><h3>支払方法</h3></strond>
	</div>
	<div class="row">
	  <div class="col-xs-2"></div>
	    <div class="col-xs-8">
	  <%= f.radio_button :payment_method, :クレジットカード %>
      <%= f.label :payment_method, "クレジットカード", {value: :クレジットカード} %>
      <br><%= f.radio_button :payment_method, :銀行振込 %>
      <%= f.label :payment_method, "銀行振込", {value: :銀行振込} %>
        </div>
      </div>


      <div class="row">
  	    <div class="col-xs-1"></div>
  	    <div class="col-xs-11">
  	    <strond><h3>お届け先</h3></strond>
  	    </div>
      </div>
      <div class="row">
        <div class="col-xs-2"></div>
	    <div class="col-xs-10">
	  <%= f.radio_button :address, 1 %>
      <%= f.label :address, "ご自身の住所", {value: :true} %>
      <br><%= @customer.post_code %>
      <%= @customer.address %>
      <%= @customer.last_name %>
      <%= @customer.first_name %>

      <br><%= f.radio_button :address, 2 %>
      <%= f.label :address, "登録済住所から選択", {value: :true} %>
      <br><%= f.collection_select :address_id, @shipping_address, :id ,:view_post_code_and_address_and_name, :prompt => "--選択してください--" %>

      <br><%= f.radio_button :address, 3 %>
      <%= f.label :address, "新しいお届け先", {value: :true} %>
        </div>
      </div>
      <div class="row">
      	<div class="col-xs-2"></div>
      	<div class="col-xs-2">
        <strong><h5>郵便番号</h5></strong>
        </div>
        <div class="col-xs-6">
      <%= f.text_field :new_post_code, size: "10x10" %>
        </div>
      </div>
      <div class="row">
      	<div class="col-xs-2"></div>
      	<div class="col-xs-2">
        <strong><h5>住所</h5></strong>
        </div>
        <div class="col-xs-6">
          <%= f.text_field :new_address, size: "50x10"%>
        </div>
      </div>
	   <div class="row">
	  	<div class="col-xs-2"></div>
	  	<div class="col-xs-2">
	    <strong><h5>宛名</h5></strong>
	    </div>
	    <div class="col-xs-6">
	      <%= f.text_field :new_name, size: "20x10"%>
	    </div>
	  </div>
	   <div class="row">
	  	<div class="col-xs-2"></div>
	  	<div class="col-xs-3"></div>
	  	<div class="col-xs-3">
	  		<%= f.submit "確認画面へ進む", class:"btn btn-info" %>
	  	</div>
      <% end %>
  </div>

</div>