<div class="container">
  <div class="row">
  	<div class="col-md-3">
  	  <h3>注文履歴一覧</h3>
  	</div>
  </div>
  <div class="row">
  	<div class="col-md-12">
  	  <table class="table table-bordered">
  	    <thead>
	      <tr>
    	    <th>注文日</th>
    	    <th>配送先</th>
    	    <th>注文商品</th>
    	    <th>支払金額</th>
    	    <th>ステータス</th>
    	    <th>注文詳細</th>
	      </tr>
  	    </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
          	<td><%= order_detail.created_at %></td>
          	<td><%= order_detail.order.address %></td>
          	<td><%= order_detail.item.name %></td>
          	<td><%= order_detail.price %></td>
          	<td><%= order_detail.production_status %></td>
          	<td><%= link_to "表示する", customers_order_path(order_detail), class: "btn btn-info" %></td>
          </tr>
          <% end %>
  	    </tbody>
  	  </table>
  	</div>
  </div>
</div>