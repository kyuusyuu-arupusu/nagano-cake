<div class="container">
  <div class="row">
  	<div class="col-md-3">
  	  <h3>注文履歴一覧</h3>
  	</div>
  </div>
  <div class="row">
  	<div class="col-md-12">
  	  <table class="table table-bordered">
  	    <thead>
  	      <tr class="active">
      	    <th>注文日</th>
      	    <th>配送先</th>
      	    <th>注文商品</th>
      	    <th>支払金額</th>
      	    <th>ステータス</th>
      	    <th>注文詳細</th>
  	      </tr>
  	    </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
          	<td><%= order.created_at %></td>
          	<td>
              <%= order.post_code %>
              <%= order.address %>
              <%= order.customer.last_name %>               
              <%= order.customer.first_name %>
            </td>
          	<td>
              <% order.order_details.each do |d| %>
                <%= d.item.name %>
              <% end %>
            </td>
            <td><%= order.total_price %></td>
          	<td><%= order.order_status %></td>
          	<td><%= link_to "表示する", customers_order_path(order), class: "btn btn-info" %></td>
          </tr>
          <% end %>
  	    </tbody>
  	  </table>
  	</div>
  </div>
</div>