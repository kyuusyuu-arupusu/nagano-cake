<div class="container">
  <h3>配送先登録/一覧</h3>
  <div class="row">
  	<div class="col-xs-8">
  	  <%= form_for(@shipping_address, url:customers_shipping_addresses_path) do |s| %>
	  	  <table class="table table-bordered">
	  	  	<tr>
	  	  	  <td>郵便番号</td>
	  	  	  <td><%= s.text_field :post_code %></td>
	  	  	</tr>
	  	  	<tr>
	  	  	  <td>住所</td>
	  	  	  <td><%= s.text_field :address %></td>
	  	  	</tr>
	  	  	<tr>
	  	  	  <td>宛名</td>
	  	  	  <td><%= s.text_field :name %></td>
	  	  	</tr>
	  	  </table>
	  	  <%= s.submit '登録する' %>
  	  <% end %>
  	</div>
  	<div class="col-xs-7">
      <table class="table table-bordered">
      	<thead>
      	  <th>郵便番号</th>
      	  <th>住所</th>
      	  <th>宛名</th>
      	  <th></th>
      	  
      	</thead>
	    <% @shipping_addresses.each do |sa| %>
	    <tbody>
	      <td><%= sa.post_code %></td>
	      <td><%= sa.address %></td>
	      <td><%= sa.name %></td>
	      <td>
	      	<%= link_to "編集する", edit_customers_shipping_address_path(sa.id), class: "btn btn-primary" %>
	      	<%= link_to "削除する", customers_shipping_address_path(sa.id),method: :delete, "data-confirm" => "本当に削除しますか?", class: "btn btn-danger" %>
	      </td>
	    <% end %>
	    </tbody>
	  </table>
	</td>
  </div>
</div>