<div class="container">
  <% if @customer.errors.any? %>
  <div id="error_explanation">
    <h3><%= @customer.errors.count %>errors prohibited this obj from being saved:</h3>
      <ul>
        <% @customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  </div>
  <% end %>
  <div class="row">
  	<div class="col-xs-2">
  	  <h3>登録者情報</h3>
  	</div>
  	<div class="col-xs-2">
  	  <%= link_to '退会しますか？', customers_customer_path(@customer.id),method: :delete, "data-confirm" => "本当に削除しますか?", class: "btn btn-danger" %>
  	</div>
  </div>

  <div class="row">
  	<div class="col-xs-9">
  	  <%= form_for(@customer, url: customers_customer_path(@customer.id)) do |c| %>
	  	<table class="table table-bordered">
	  	  <tr>
	  	  	<td class="active">氏名</td>
	  	  	<td><%= c.text_field :last_name %><%= c.text_field :first_name %></td>
	  	  </tr>
	  	  <tr>
	  	  	<td class="active">カナ</td>
	  	    <td><%= c.text_field :last_name_kana %><%= c.text_field :first_name_kana %></td>
	  	  </tr>
	      <tr>
	      	<td class="active">郵便番号</td>
	      	<td><%= c.text_field :post_code %></td>
	      </tr>
	      <tr>
	      	<td class="active">住所</td>
	        <td><%= c.text_field :address %></td>
	      </tr>
	      <tr>
	      	<td class="active">電話番号</td>
	        <td><%= c.text_field :phone_number %></td>
	      </tr>
	      <tr>
	      	<td class="active">メールアドレス</td>
	        <td><%= c.text_field :email %></td>
	      </tr>
	  　</table>
      <%= c.submit '編集内容を保存する', class:"btn btn-info"%>   
	  <% end %>
	</div>
  </div>
</div>