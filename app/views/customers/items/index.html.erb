<div class="container">
  <div class="row">
  	<div class="col-xs-3">
  	  <table class="table table-bordered">
  	  	<thead>
  	  	  <th>ジャンル検索</th>
  	  	</thead>
  	  	<tbody>
          <% @genres.each do |g| %>
  	  	    <tr>
              <td><%= g.genre_name %></td>
            </tr>
          <% end %>
  	  	</tbody>
  	  </table>
  	</div>
  	<div class="col-xs-9">
  	  <% @items.each do |i| %>
  	  <div class="col-xs-3">
  	  	<%= attachment_image_tag i, :image, :fill, 150, 150, format: 'jpeg' %>

  	  	<p><%= link_to i.name, customers_item_path(i.id) %></p>
        <p><span>¥</span><%= i.price %><span>(税込)</span></p>      
  	  	
  	  </div>
  	  <% end %>
  	</div>